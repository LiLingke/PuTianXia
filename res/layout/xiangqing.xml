    <ImageView
        android:id="@+id/xiangqing_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/xiangqing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/xiangqing_image"
        android:layout_toLeftOf="@+id/xiangqing_weizhi"
        android:layout_toRightOf="@+id/xiangqing_image"
        android:singleLine="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/xiangqing_weizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/xiangqing_image"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/xiangqing_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/xiangqing_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xiangqing_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/xiangqing_image"
        android:singleLine="true" />

</RelativeLayout>