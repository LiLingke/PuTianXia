<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/title_bar_background" >

        <ImageButton
            android:id="@+id/house_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/wb_btn_off_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发布房源"
            android:textSize="20dip" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="15dip" >

                <TextView
                    android:id="@+id/housetitle"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="房源标题:     "
                    android:textSize="16dip" />

                <EditText
                    android:id="@+id/houseedit"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/housetitle"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:paddingRight="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/housearea1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="面积 :            "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/housearea2"
                    android:layout_width="135dp"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/housearea1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/housearea2"
                    android:text="(元/平方米)"
                    android:textSize="16dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/housetype1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="户型 : "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/housetype2"
                    android:layout_width="150dp"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/housetype1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/houseprice1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="售价 : "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/houseprice2"
                    android:layout_width="150dp"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/houseprice1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="15dip" >

                <TextView
                    android:id="@+id/housedecorate1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="装修 : "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/housedecorate2"
                    android:layout_width="150dip"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/housedecorate1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="15dip" >

                <TextView
                    android:id="@+id/housetime1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="年份 : "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/housetime2"
                    android:layout_width="150dip"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/housetime1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="15dip" >

                <TextView
                    android:id="@+id/housefloor1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="楼层 : "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/textview01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/housefloor1"
                    android:text="第  "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/housefloor2"
                    android:layout_width="60dip"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/textview01"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />

                <TextView
                    android:id="@+id/textview02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/housefloor2"
                    android:text="层     "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/textview03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textview02"
                    android:text="共   "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/housefloor3"
                    android:layout_width="60dip"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/textview03"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />

                <TextView
                    android:id="@+id/textview04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/housefloor3"
                    android:text="层     "
                    android:textSize="16dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/housecommunity1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="小区:     "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/housecommunity2"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/housecommunity1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/houseaddress1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dip"
                    android:text="地址 : "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/houseaddress2"
                    android:layout_width="80dip"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/houseaddress1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />

                <TextView
                    android:id="@+id/textview05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/houseaddress2"
                    android:text=" 省  "
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/houseaddress3"
                    android:layout_width="80dip"
                    android:layout_height="35dip"
                    android:layout_toRightOf="@+id/textview05"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:drawableRight="@drawable/icon_down"
                    android:paddingRight="8dip" />

                <TextView
                    android:id="@+id/textview06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/houseaddress3"
                    android:text="市     "
                    android:textSize="16dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/lpdescribe1"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:text="楼盘介绍:     "
                    android:textSize="16dip" />

                <EditText
                    android:id="@+id/lpdescribe2"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_toRightOf="@+id/lpdescribe1"
                    android:background="@drawable/shape_help_category_tv_bg"
                    android:paddingRight="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <Button
                    android:id="@+id/btreset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="重置" />

                <Button
                    android:id="@+id/btconfirm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btreset"
                    android:text="确定" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>