<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/my_login_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/em_splash"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/my_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/textview_shapa"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/login"
            android:textColor="#7D7D7D"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/my_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shapa"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/register"
            android:textColor="#7D7D7D"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDCDC1"
                android:paddingBottom="15dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/my_renzheng"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/my_xiugai"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/em_splash" />

                <TextView
                    android:id="@+id/my_xiugai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:text="修改" />

                <TextView
                    android:id="@+id/my_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_toLeftOf="@+id/my_xiugai"
                    android:layout_toRightOf="@+id/imageView1"
                    android:singleLine="true"
                    android:text="SM384745ssssssssssss" />

                <TextView
                    android:id="@+id/my_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_textview"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="寻找房源者" />

                <TextView
                    android:id="@+id/my_renzheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_type"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/my_xiugai"
                    android:layout_toRightOf="@+id/imageView1"
                    android:background="#D4D4D4"
                    android:gravity="center"
                    android:text="未认证" />
            </RelativeLayout>

            <TextView
                android:id="@+id/my_fragment_shouyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/linshapa"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="我的收益"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/linshapa"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/my_fragment_textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linshapa"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="已关注房源" />

                <TextView
                    android:id="@+id/my_fragment_textview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linshapa"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="已关注房源" />

                <TextView
                    android:id="@+id/my_fragment_textview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linshapa"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="已关注房源" />

                <TextView
                    android:id="@+id/my_fragment_textview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linshapa"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="已关注房源" />

                <TextView
                    android:id="@+id/my_fragment_textview5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linshapa"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="已关注房源" />

                <TextView
                    android:id="@+id/my_fragment_textview6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linshapa"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="已关注房源" />

                <TextView
                    android:id="@+id/my_fragment_textview7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linshapa"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="已关注房源" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>