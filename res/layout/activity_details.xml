<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/title_bar_background" >

        <ImageButton
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/wb_btn_off_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详细情况"
            android:textSize="20dip" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/dscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.putianxia.view.BannerRectLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.putianxia.view.GjViewFlipper
                    android:id="@+id/dflipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/dpoint_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </com.putianxia.view.BannerRectLayout>

            <TextView
                android:id="@+id/dtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dip"
                android:text="性价比超高交通方便铺面出租"
                android:textSize="15dip" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:paddingTop="10dip" >

                <ImageView
                    android:id="@+id/dxiangqing_image"
                    android:layout_width="90dip"
                    android:layout_height="80dip"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/xiangqing" />

                <TextView
                    android:id="@+id/dxiangqing_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/dxiangqing_image"
                    android:paddingTop="5dip"
                    android:singleLine="true"
                    android:text="发布人 :    郭美美"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dxiangqing_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/dxiangqing_image"
                    android:paddingTop="45dip"
                    android:singleLine="true"
                    android:text="已认证"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dxiangqing_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="25dip"
                    android:singleLine="true"
                    android:text="关注铺面"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/dprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="租金 :  1500元/月"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/darea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="面积 :  300 平方米"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/dfloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="楼层 :  2/5"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/dactualarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="实际使用面积 :  230 平方米"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/dstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="出售类型  :  出租"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/dfanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="经营范围 :  美发"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/ddizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="地址 :  广东省东莞市东莞理工学院大学路一号"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/dbiaoqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="标签 :  性价比高              交通方便               靠近地铁"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/djieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="铺源介绍"
                android:textSize="15dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingTop="20dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/dmaijia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bt01"
                        android:text="联系买家"
                        android:textSize="15dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/dfuwu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bt01"
                        android:text="服务人员"
                        android:textSize="15dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/dpingjia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bt01"
                        android:text="评价房源"
                        android:textSize="15dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/dtiujian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bt02"
                        android:text="推荐"
                        android:textSize="15dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>